<!-- App Capsule -->
<div id="appCapsule">

    <div class="login-form">
        <div class="section">
            <img src="./images/logo.png" alt="image" class="form-image">
        </div>

        <div class="section mt-5">
            <h1>POS</h1>
            <p class="text-muted">Masukan email dan password</p>
        </div>

        <div class="section mt-1 mb-5">
            <form id="form-login" class="needs-validation" >
                <div class="form-group animated">
                    <div class="input-wrapper">
                        <label class="label" for="username">Username</label>
                        <input type="text" class="form-control" id="username" placeholder="Username" required
                            value="fatah">
                        <i class="clear-input">
                            <svg class="bi bi-x-circle-fill" width="1em" height="1em" viewBox="0 0 16 16"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M16 8A8 8 0 110 8a8 8 0 0116 0zm-4.146-3.146a.5.5 0 00-.708-.708L8 7.293 4.854 4.146a.5.5 0 10-.708.708L7.293 8l-3.147 3.146a.5.5 0 00.708.708L8 8.707l3.146 3.147a.5.5 0 00.708-.708L8.707 8l3.147-3.146z"
                                    clip-rule="evenodd" />
                            </svg>
                        </i>
                        <div class="invalid-feedback">Masukan email anda.</div>
                    </div>
                </div>

                <div class="form-group animated">
                    <div class="input-wrapper">
                        <label class="label" for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" required
                            value="123456">
                        <i class="clear-input">
                            <svg class="bi bi-x-circle-fill" width="1em" height="1em" viewBox="0 0 16 16"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M16 8A8 8 0 110 8a8 8 0 0116 0zm-4.146-3.146a.5.5 0 00-.708-.708L8 7.293 4.854 4.146a.5.5 0 10-.708.708L7.293 8l-3.147 3.146a.5.5 0 00.708.708L8 8.707l3.146 3.147a.5.5 0 00.708-.708L8.707 8l3.147-3.146z"
                                    clip-rule="evenodd" />
                            </svg>
                        </i>
                        <div class="invalid-feedback">Password dibutuhkan.</div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-dark btn-block" id="login-btn">Log in</button>
                </div>

            </form>
        </div>
    </div>

</div>
<!-- * App Capsule -->