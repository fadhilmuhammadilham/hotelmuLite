{{#each transactions as | transaction |}}
<li>
    <a href="javascript:;" class="item">
        <div class="in">
            <div class="w-50">
                <div>#{{ transaction.trx_number }}</div>
                <div class="text-muted">{{ transaction.trx_date }}</div>
            </div>
            <div class="flex-grow-1">
                {{#if transaction.status}}<span class="badge badge-success mr-3">Sukses</span>{{else}}<span class="badge badge-secondary mr-3">Draft</span>{{/if}}
            </div>
            <div class="font-weight-bold">Rp{{[helpers/currency] transaction.total_price }}</div>
        </div>
    </a>
</li>
{{else}}
<li class="justify-content-center">
    <div class="text-center py-3">Belum ada transaksi.</div>
</li>
{{/each}}