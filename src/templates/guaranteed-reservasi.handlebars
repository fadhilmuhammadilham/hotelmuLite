                                    <button class="button-segmen" data-toggle="modal" data-target="#piligsegmentasi">
                                        <p class="text-button-segmen">
                                            Pilih Segmen
                                        </p>
                                    </button>
                                </div>
                            </div>
                            <br>
                            <h5>Isi Data Tamu</h5>
                            <div class="input">
                                <input type="text" placeholder="Pilih Segmentasi">
                                <div class="pilih-data-tamu">
                                    <button class="button-data-tamu" data-toggle="modal" data-target="#datatamu">
                                        <p class="text-data-tamu">
                                            Data Tamu
                                        </p>
                                    </button>
                                </div>
                            </div>
                            <h5 class="mt-2">Jumlah Orangtua</h5>
                            <div class="tambah-kurang">
                                <button id="minusButton" class="btn-minus">-</button>
                                <input class="form-jumlah" type="number" id="numberInput" value="0">
                                <button id="plusButton" class="btn-plus">+</button>
                            </div>
                            <h5 class="mt-2 ">Jumlah Anak</h5>
                            <div class="tambah-kurang">
                                <button id="minusButton" class="btn-minus">-</button>
                                <input class="form-jumlah" type="number" id="numberInput" value="0">
                                <button id="plusButton" class="btn-plus">+</button>
