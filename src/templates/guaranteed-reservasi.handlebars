                    <label for="step2">Step 2</label>
                    <div style="display:flex;">
                        <div style="padding-right: 10px;">
                            <button class="button-step button"><label class="prev-button" for="step1">Previous</label>
                            </button>
                        </div>
                        <div>
                            <button class="button-step button"><label class="next-button" for="step3">Next</label>
                            </button>
                        </div>
                    </div>
                </div>

