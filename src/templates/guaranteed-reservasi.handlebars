                <div class="wizard__content">
                    <label for="step3">Step 3</label>
                    <div>
                        <button class="button-step button">
                            <label class="prev-button" for="step2">Previous</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
