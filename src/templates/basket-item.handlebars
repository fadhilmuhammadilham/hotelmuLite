{{#each items as | item | }}
<li data-id="{{item.id}}">
    <div class="item">
        <div class="imageWrapper">
            <img src="/images/placeholder.jpg" alt="image" class="imaged w36">
        </div>
        <div class="in">
            <div class="text-item">
                {{item.name}}
                <div class="text-muted">{{#if ([helpers/nequal] item.discount 0)}}<s>Rp{{[helpers/currency]
                        item.totalSub 2}}</s>{{else}}Rp{{[helpers/currency] item.total 2}}{{/if}}</div>
                {{#if ([helpers/nequal] item.discount 0)}}<div class="text-muted">Rp{{[helpers/currency] item.total 2}}
                    (disc {{item.discount}}%)</div>{{/if}}
                {{#if ([helpers/nequal] item.note '')}}<div class="text-muted"> * {{ item.note }}</div>{{/if}}
            </div>
            <div class="form-qty">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend" id="button-addon3">
                        <button class="btn btn-outline-secondary btn-min" type="button">
                            <svg class="bi productbi-dash" width="1em" height="1em" viewBox="0 0 16 16"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3.5 8a.5.5 0 01.5-.5h8a.5.5 0 010 1H4a.5.5 0 01-.5-.5z"
                                    clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                    <input type="text" class="form-control text-center" readonly="readonly" placeholder="" aria-label=""
                        aria-describedby="button-addon4" value="{{ item.qty }}">
                    <div class="input-group-append" id="button-addon4">
                        <button class="btn btn-outline-secondary btn-plus" type="button"><svg class="bi bi-plus"
                                width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M8 3.5a.5.5 0 01.5.5v4a.5.5 0 01-.5.5H4a.5.5 0 010-1h3.5V4a.5.5 0 01.5-.5z"
                                    clip-rule="evenodd" />
                                <path fill-rule="evenodd"
                                    d="M7.5 8a.5.5 0 01.5-.5h4a.5.5 0 010 1H8.5V12a.5.5 0 01-1 0V8z"
                                    clip-rule="evenodd" />
                            </svg></button>
                    </div>
                </div>
            </div>
            <div class="ml-1">
                <a href="javascript:;" class="btn-delete-product d-block p-1">
                    <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z" />
                        <path fill-rule="evenodd"
                            d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                            clip-rule="evenodd" />
                    </svg>
                </a>
                <a href="javascript:;" class="item-select d-block p-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-pencil" viewBox="0 0 16 16">
                        <path
                            d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</li>
{{else}}
<div class="alert alert-warning text-center m-2">Keranjang belanja kosong!</div>
{{/each}}