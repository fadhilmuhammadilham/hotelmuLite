{{#each items as | item | }}
<li data-id="{{item.id}}">
    <div class="item">
        <div class="imageWrapper">
            <img src="/images/placeholder.jpg" alt="image" class="imaged w48">
        </div>
        <div class="in">
            <div class="text-item">
                {{item.name}}
                <div class="text-muted">Rp{{[helpers/currency] item.price}}</div>
            </div>
            <div class="form-qty">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend" id="button-addon3">
                        <button class="btn btn-outline-secondary btn-min" type="button">
                            <svg class="bi productbi-dash" width="1em" height="1em" viewBox="0 0 16 16"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3.5 8a.5.5 0 01.5-.5h8a.5.5 0 010 1H4a.5.5 0 01-.5-.5z"
                                    clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                    <input type="text" class="form-control text-center" readonly="readonly" placeholder="" aria-label=""
                        aria-describedby="button-addon4" value="{{ item.qty }}">
                    <div class="input-group-append" id="button-addon4">
                        <button class="btn btn-outline-secondary btn-plus" type="button"><svg class="bi bi-plus"
                                width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M8 3.5a.5.5 0 01.5.5v4a.5.5 0 01-.5.5H4a.5.5 0 010-1h3.5V4a.5.5 0 01.5-.5z"
                                    clip-rule="evenodd" />
                                <path fill-rule="evenodd"
                                    d="M7.5 8a.5.5 0 01.5-.5h4a.5.5 0 010 1H8.5V12a.5.5 0 01-1 0V8z"
                                    clip-rule="evenodd" />
                            </svg></button>
                    </div>
                </div>
            </div>
            <div class="ml-1">
                <a href="javascript:;" class="btn-delete-product p-1">
                    <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z" />
                        <path fill-rule="evenodd"
                            d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                            clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</li>
{{else}}
<div class="alert alert-warning text-center m-2">Keranjang belanja kosong!</div>
{{/each}}