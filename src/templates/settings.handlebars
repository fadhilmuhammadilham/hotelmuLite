{{!-- App Capsule --}}
<div id="appCapsule" >
    <ul class="listview simple-listview">
        <li>
            ID Hotel
            <span>{{ hotel_id }}</span>
        </li>
    </ul>
    <div class="section">
        <div class="mt-2">
            <button type="button" class="btn btn-danger btn-block" id="reset-btn">Reset</button>
        </div>
    </div>
</div>
<div class="modal fade dialogbox" id="DialogBasic-reset" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Konfirmasi Reset</h5>
            </div>
            <div class="modal-body">
                Apakah Anda yakin akan Reset ID Hotel? Jika anda reset ID Hotel anda akan diarahkan ke halaman Setup Hotel
            </div>
            <div class="modal-footer">
                <div class="btn-inline">
                    <a href="#" class="btn btn-text-secondary" data-dismiss="modal">Kembali</a>
                    <a href="#" class="btn btn-text-danger" id="confirm-reset">Reset</a>
                </div>
            </div>
        </div>
    </div>
</div>
