<!-- App Header -->
<div class="appHeader scrolled">
    <div class="left">
        <a href="javascript:history.back();" class="headerButton">
            <svg class="icon bi bi-x" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M11.854 4.146a.5.5 0 010 .708l-7 7a.5.5 0 01-.708-.708l7-7a.5.5 0 01.708 0z"
                    clip-rule="evenodd" />
                <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 000 .708l7 7a.5.5 0 00.708-.708l-7-7a.5.5 0 00-.708 0z"
                    clip-rule="evenodd" />
            </svg>
        </a>
    </div>
    <div class="pageTitle">

    </div>
    <div class="right">

    </div>
</div>
<!-- * App Header -->

<!-- App Capsule -->
<div id="appCapsule">
    <div class="section mt-2">
        <h3 class="text-center">Transaksi berhasil</h3>
        <p class="text-muted text-center mb-3" id="t-date">18.01, 21 April 2020</p>

        <div class="mb-2 d-flex justify-content-between">Tipe pembayaran <span id="payment-method"
                class="text-right">Tunai</span></div>
        <div class="mb-2 d-flex justify-content-between">Order ID <span id="order-id" class="text-right">00000001</span>
        </div>
    </div>

    <div class="listview-title">Daftar item</div>
    <ul class="listview image-listview media basket-items">
        {{#each basket.items as | item |}}
        <li>
            <div class="item">
                <div class="in">
                    <div class="text-item">
                        {{ item.name }}
                        <div class="text-muted">{{ item.qty }} x Rp{{ [helpers/currency] item.price}}</div>
                    </div>
                    <div>
                        Rp{{ [helpers/currency] item.total }}
                    </div>
                </div>
            </div>
        </li>
        {{else}}
        <li>
            <div class="flex-grow-1 text-center p-2">
                Tidak ada item
            </div>
        </li>
        {{/each}}
    </ul>

    <div class="listview-title mt-2">Transaksi</div>
    <ul class="listview simple-listview">
        <li>Jumlah item <span class="text-bold" id="total-qty">0</span></li>
        <li>Total <span class="text-bold" id="total-payment">0</span></li>
        <li>Pembayaran <span class="text-bold" id="cash_receive">0</span></li>
        <li>Kembalian <span class="text-bold" id="refund">0</span></li>
    </ul>

    <div class="section pt-4 pb-4">&nbsp;</div>

    <div class="form-button-group">
        <button type="button" id="print-receive-btn" class="btn btn-primary btn-block btn-lg">
            Cetak struk
        </button>
    </div>
</div>
<!-- * App Capsule -->