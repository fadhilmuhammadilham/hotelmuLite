<!-- App Header -->
<div class="appHeader scrolled">
    <div class="left">
        <a href="/" data-link class="headerButton">
            <svg class="icon bi bi-x" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M11.854 4.146a.5.5 0 010 .708l-7 7a.5.5 0 01-.708-.708l7-7a.5.5 0 01.708 0z"
                    clip-rule="evenodd" />
                <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 000 .708l7 7a.5.5 0 00.708-.708l-7-7a.5.5 0 00-.708 0z"
                    clip-rule="evenodd" />
            </svg>
        </a>
    </div>
    <div class="pageTitle">

    </div>
    <div class="right">

    </div>
</div>
<!-- * App Header -->

<!-- App Capsule -->
<div id="appCapsule">
    <div class="section mt-2">
        <h3 class="text-center">Transaksi berhasil</h3>
        <p class="text-muted text-center mb-3" id="t-date">{{trx_date}}</p>

        <div class="mb-2 d-flex justify-content-between">Tipe pembayaran <span id="payment-method"
                class="text-right">{{payment.payment_method}}</span></div>
        <div class="mb-2 d-flex justify-content-between">Order ID <span id="order-id" class="text-right">{{ trx_number
                }}</span>
        </div>
    </div>

    <div class="listview-title">Daftar item</div>
    <ul class="listview image-listview media basket-items">
        {{#each items as | item |}}
        <li class="product">
            <div class="item">
                <div class="imageWrapper">
                    <img src="/images/placeholder.jpg" alt="image" class="imaged w48">
                </div>
                <div class="in">
                    <div>
                        {{item.name}}
                        <div class="text-muted">{{item.qty}} X {{#if ([helpers/nequal] item.discount
                            0)}}<s>Rp{{[helpers/currency]
                                item.price}}</s>{{else}}Rp{{[helpers/currency] item.price}}{{/if}} </div>
                        {{#if ([helpers/nequal] item.discount 0)}}
                        <div class="text-muted">Rp{{[helpers/currency] item.price_after_discount}}
                            (disc
                            {{item.discount}}%)</div>{{/if}}
                    </div>
                    <span>Rp{{[helpers/currency]item.total}}</span>
                </div>
            </div>
        </li>
        {{else}}
        <li>
            <div class="flex-grow-1 text-center p-2">
                Tidak ada item
            </div>
        </li>
        {{/each}}

    </ul>

    <div class="listview-title mt-2">Transaksi</div>
    <ul class="listview simple-listview">
        <li>Sub Total <span class="text-bold" id="total-payment">Rp{{[helpers/currency] total_sub}}</span></li>
        <li>Diskon <span class="text-bold">{{ discount_text }}</span></li>
        <li>Round <span class="text-bold">Rp{{[helpers/currency] round}}</span></li>
        <li>Total <span class="text-bold">Rp{{[helpers/currency] total}}</span></li>
        <li>Total Pembayaran <span class="text-bold" id="cash_receive">Rp{{[helpers/currency]
                payment.total_payment}}</span></li>
        <li>Kembalian <span class="text-bold" id="refund">Rp{{[helpers/currency] payment.refund}}</span></li>
    </ul>

    <div class="section pt-4 pb-4">&nbsp;</div>

    <div class="form-button-group">
        <button type="button" id="print-receive-btn" class="btn btn-primary btn-block btn-lg">
            Cetak struk
        </button>
    </div>
</div>
<!-- * App Capsule -->