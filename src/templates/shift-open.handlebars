<!-- App Header -->
<div class="appHeader no-border">
    <div class="left">
        <a href="javascript:history.back()" class="headerButton">
            <svg class="icon bi bi-chevron-left" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M11.354 1.646a.5.5 0 010 .708L5.707 8l5.647 5.646a.5.5 0 01-.708.708l-6-6a.5.5 0 010-.708l6-6a.5.5 0 01.708 0z"
                    clip-rule="evenodd" />
            </svg>
        </a>
    </div>
    <div class="pageTitle">
        Buka Shift
    </div>
    <div class="right">

    </div>
</div>
<!-- * App Header -->

<!-- App Capsule -->
<div id="appCapsule">

        <div class="section mt-5 mb-5">
            <form id="form-shift" class="needs-validation" >
                <div class="form-group animated">
                    <div class="input-wrapper">
                        <input type="text" class="form-control" id="saldo-awal" placeholder="Saldo Awal" required
                            value="" min="0">
                        <i class="clear-input">
                            <svg class="bi bi-x-circle-fill" width="1em" height="1em" viewBox="0 0 16 16"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M16 8A8 8 0 110 8a8 8 0 0116 0zm-4.146-3.146a.5.5 0 00-.708-.708L8 7.293 4.854 4.146a.5.5 0 10-.708.708L7.293 8l-3.147 3.146a.5.5 0 00.708.708L8 8.707l3.146 3.147a.5.5 0 00.708-.708L8.707 8l3.147-3.146z"
                                    clip-rule="evenodd" />
                            </svg>
                        </i>
                        <div class="invalid-feedback">Masukan saldo awal.</div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-dark btn-block" id="open-shift-btn" disabled>Buka Shift</button>
                </div>

            </form>
        </div>
    </div>

</div>
<div class="modal fade dialogbox" id="DialogBasic-confirm-saldo" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Konfirmasi Saldo</h5>
            </div>
            <div class="modal-body">
                Apakah anda yakin akan buka shift pada saldo awal Rp<span class="saldo"></span> ?
            </div>
            <div class="modal-footer">
                <div class="btn-inline">
                    <a href="#" class="btn btn-text-secondary" data-dismiss="modal">Kembali</a>
                    <a href="#" class="btn btn-text-danger" id="confirm-reset">Reset</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- * App Capsule -->